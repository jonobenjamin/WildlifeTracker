# Environment Configuration for Wildlife Tracker Backend
# Copy this file to .env and fill in your actual values

# API Key for authentication (generate a secure random string)
API_KEY=your-secure-api-key-here

# Firebase Configuration
FIREBASE_PROJECT_ID=wildlifetracker-4d28b

# Firebase Service Account Key (paste the entire JSON content from your firebase-service-account.json)
# This should be the complete JSON object from your Firebase service account key file
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"wildlifetracker-4d28b","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://your-frontend-domain.com

# Server Configuration
PORT=3000
NODE_ENV=development